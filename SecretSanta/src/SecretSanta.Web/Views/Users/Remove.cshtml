@model UserViewModel
@if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
{
    <div>@ViewBag.ErrorMessage</div>
}
<form asp-route="Remove">
    <div class="field">
        <label class="label" asp-for="Id">User Id</label>
        <div class="control">
            <input class="input" type="text" asp-for="Id" />
        </div>
    </div>
    <div class="field">
        <div class="control">
            <button class="button is-danger">Remove</button>
        </div>
    </div>
    <div class="control">
        <button class="button is-light" asp-action="Index">Cancel</button>
    </div>
</form>