@model GroupInputViewModel
@if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
{
    <div>@ViewBag.ErrorMessage</div>
}
<div asp-validation-summary="All"></div>
<form asp-route="Add">
    <div class="field">
        <label class="label" asp-for="Name">Group Title</label>
        <div class="control">
            <input class="input" type="text" asp-for="Name" />
        </div>
    </div>
    <div class="field">
        <div class="control">
            <button class="button is-primary">Submit</button>
        </div>
        <div class="control">
            <button class="button is-light" asp-action="Index">Cancel</button>
        </div>
    </div>
</form>