@model GroupInputViewModel

<div asp-validation-summary="All"></div>
<form asp-route="Add">
    <div class="field">
        <label class="label" asp-for="Name">Title</label>
        <div class="control">
            <input class="input" type="text" asp-for="Name"/>
        </div>
        <div class="field is-grouped">
            <div class="control">
                <button class="button is-primary">Submit</button>
            </div>
            <div class="control">
                <a asp-controller="Groups" asp-action="Index" class="button is-light">Cancel</a>
            </div>
        </div>
    </div>
</form>

