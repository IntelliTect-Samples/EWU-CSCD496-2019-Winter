@model GroupInputViewModel
@if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
{
    <div>@ViewBag.ErrorMessage</div>
}

<form asp-route="Edit">
    <div class="field">
        <label class="label" asp-for="Name">Group Name</label>
        <div class="control">
            <input class="input" type="text" asp-for="Name" />
        </div>
    </div>
    <div class="field">
        <div class="control">
            <input type="hidden" id="groupId" value="@ViewBag.GroupId" />
        </div>
    </div>
    <div class="field">
        <div class="control">
            <button class="button is-primary">Submit</button>
        </div>
        <div class="control">
            <button asp-controller="Groups" asp-action="Index" class="button is-light">Cancel</button>
        </div>
    </div>
</form> 