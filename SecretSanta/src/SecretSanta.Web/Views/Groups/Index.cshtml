<h1 class="heading">Groups</h1>
<ul>
    @foreach (var group in ViewBag.Groups)
    {
        <li>@group.Name</li>
    }
</ul>
<br />
<a asp-controller="Groups" asp-action="Add" class="button is-primary">Add Group</a>
<a asp-controller="Groups" asp-action="Update" class="button is-info">Update Group</a>
<a asp-controller="Groups" asp-action="Remove" class="button is-danger">Remove Group</a>