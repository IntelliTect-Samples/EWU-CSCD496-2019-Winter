<h1 class="heading">Groups</h1>
<ul>
    @foreach (var group in ViewBag.Groups)
    {
    <li>
        @group.Name 
        <a class="button" asp-action="Edit" asp-route-id="@group.Id">Change Title</a> 
        <a class="button is-danger" asp-action="Delete" asp-route-id="@group.Id" onclick="return confirm('DESTRUCTIVE OPERATION - Are you sure you want to delete @group.Name')">Delete</a>
    </li>
    }
</ul>
<a asp-controller="Groups" asp-action="Add" class="button is-primary">Add Group</a>