<h1 class="heading is-size-4 is-bold">Groups<br /></h1>
<ul>
    @if (ViewBag.Groups.Count == 0)
    {
        <li>No Groups</li>
    }
    @foreach (var group in ViewBag.Groups)
    {
        <li>
            @group.Name @group.Id
            <a class="button" asp-route-id="@group.Id">Edit</a>
            <a class="button is-danger" asp-action="delete" asp-route-id="@group.Id" onclick="return confirm('Are you sure you want to delete @group.Name @group.Id?')">Delete</a>
        </li>
    }
</ul>
<a asp-controller="Groups" asp-action="Add" class="button is-primary">Add Group</a>